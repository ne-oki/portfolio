---
import Footer from '../components/Footer/Footer.astro';
import Header from '../components/Header/Header.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-color-bg-light dark:bg-color-bg-dark text-color-text-primary-light dark:text-color-text-primary-dark">
    <div class="flex min-h-screen min-w-[28rem] flex-col">
      <div
        class="sticky top-0 z-10 backdrop-blur-sm xl:bg-transparent xl:backdrop-blur-none xl:dark:bg-transparent xl:pointer-events-none"
      >
        <Header />
      </div>
      <div class="flex-1 overflow-hidden">
        <slot />
      </div>
      <div class="mt-4">
        <Footer />
      </div>
    </div>
  </body>
</html>
