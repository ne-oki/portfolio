---
import Footer from '../components/Footer/Footer.astro';
import Header from '../components/Header/Header.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans dark:bg-gray-900">
    <div class="flex flex-col min-h-screen min-w-[28rem]">
      <div
        class="sticky top-0 z-10 backdrop-blur-sm bg-white/50 dark:bg-slate-900/50 xl:backdrop-blur-none xl:bg-transparent xl:dark:bg-transparent"
      >
        <Header />
      </div>
      <div class="flex-1 overflow-hidden">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
