---
import Footer from '../components/Footer/Footer.astro';
import Header from '../components/Header/Header.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-background-light dark:bg-background-dark text-t-primary-light dark:text-t-primary-dark">
    <div class="flex min-h-screen min-w-[28rem] flex-col">
      <div
        class="sticky top-0 z-10 bg-white/50 backdrop-blur-sm dark:bg-slate-900/50 xl:bg-transparent xl:backdrop-blur-none xl:dark:bg-transparent"
      >
        <Header />
      </div>
      <div class="flex-1 overflow-hidden">
        <slot />
      </div>
      <div class="mt-4">
        <Footer />
      </div>
    </div>
  </body>
</html>
