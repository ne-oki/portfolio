---
import groupBy from 'lodash/groupBy'
import type { ProjectCategory } from '../../../../i18n/translates'
import { getLangFromUrl, useTranslations } from '../../../../i18n/utils'
import Badge from '../../../shared/Badge.astro'
import H1 from '../../../shared/H1.astro'
import H2 from '../../../shared/H2.astro'
import ExternalLinkIcon from '../../../shared/icons/ExternalLinkIcon.astro'
import GithubIcon from '../../../shared/icons/GithubIcon.astro'
import PackageIcon from '../../../shared/icons/PackageIcon.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const groupedProjects = groupBy(Object.values(t.projects.projects), 'category')
const projectCategories: ProjectCategory[] = [
  'Prettier Plugins',
  'npm Packages',
  'CLI Tools',
  'Websites',
]
---

<H1>{t.projects.title}</H1>
<div class="space-y-8">
  {
    projectCategories.map((category) => (
      <div>
        <H2>{category}</H2>
        <div class="space-y-4">
          {groupedProjects[category]?.map((project) => (
            <div class="rounded-lg border border-color-border-light p-5 dark:border-color-border-dark">
              <div class="flex items-center gap-3">
                <div class="mr-auto font-bold leading-4">{project.name}</div>

                <div>
                  <a
                    href={project.repoUrl}
                    aria-label={`GitHub repository for ${project.name}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block w-4 scale-110 hover:opacity-70"
                  >
                    <GithubIcon />
                  </a>
                </div>

                {project.demoUrl && (
                  <div>
                    <a
                      href={project.demoUrl}
                      aria-label={`Demo for ${project.name}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block w-4 scale-[130%] hover:opacity-70"
                    >
                      <ExternalLinkIcon />
                    </a>
                  </div>
                )}

                {project.packageUrl && (
                  <div>
                    <a
                      href={project.packageUrl}
                      aria-label={`Package link for ${project.name}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block w-4 scale-[135%] hover:opacity-70"
                    >
                      <PackageIcon />
                    </a>
                  </div>
                )}
              </div>

              <p class="mt-4 text-sm leading-normal">{project.description}</p>

              <ul class="mt-4 flex flex-wrap gap-1.5">
                {project.technologies.map((skill) => (
                  <li>
                    <Badge>{skill}</Badge>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    ))
  }
</div>
