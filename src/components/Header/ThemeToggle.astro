<div class="flex items-center justify-center space-x-1.5">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-[1.375rem] text-color-sun dark:text-color-text-primary-dark dark:opacity-50"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
    <path
      d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7"
    ></path>
  </svg>

  <label for="theme-toggle" aria-label="Switch between light and dark themes">
    <input
      id="theme-toggle"
      type="checkbox"
      class="peer sr-only"
      role="switch"
      aria-checked="false"
    />
    <div
      id="theme-toggle-ui"
      class="w-10 cursor-pointer rounded-full border p-[0.0675rem] opacity-50 after:block after:h-4 after:w-4 after:rounded-full after:border dark:after:translate-x-[1.25rem]"
    >
    </div>
  </label>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-5 text-color-text-primary-light opacity-50 dark:text-color-moon dark:opacity-100"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    stroke-width="1.75"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path
      d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"
    ></path>
    <path d="M17 4a2 2 0 0 0 2 2a2 2 0 0 0 -2 2a2 2 0 0 0 -2 -2a2 2 0 0 0 2 -2"
    ></path>
    <path d="M19 11h2m-1 -1v2"></path>
  </svg>
</div>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme')
    }

    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark'
    }

    return 'light'
  })()

  const themeToggle = document.getElementById('theme-toggle')
  if (theme === 'light') {
    document.documentElement.classList.remove('dark')
    themeToggle.checked = false
  } else {
    document.documentElement.classList.add('dark')
    themeToggle.checked = true
  }

  window.localStorage.setItem('theme', theme)
</script>

<script>
  const themeToggle = document.getElementById('theme-toggle')

  const handleToggle = () => {
    const element = document.documentElement
    element.classList.toggle('dark')

    const isDark = element.classList.contains('dark')
    localStorage.setItem('theme', isDark ? 'dark' : 'light')

    themeToggle?.setAttribute('aria-checked', isDark ? 'true' : 'false')
  }

  themeToggle?.addEventListener('change', handleToggle)
</script>
